{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dataDisk_name": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "comments": "single node mongodb test data disk'.",
            "type": "Microsoft.Compute/disks",
            "sku": {
                "name": "Premium_LRS",
                "tier": "Standard"
            },
            "name": "[parameters('dataDisk_name')]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "tags": {"product": "mongoDB", "environment": "test"},
            "scale": null,
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": 10
            },
            "dependsOn": []
        }
    ]
}